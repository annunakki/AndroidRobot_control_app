<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/helpMenu"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="370dp"
        android:layout_height="49dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Help"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/textViewAbout"
        android:layout_width="550dp"
        android:layout_height="262dp"
        android:layout_marginStart="24dp"
        android:lineSpacingExtra="10dp"
        android:background="#d4cfcf"
        android:text="TEST TEXT!\ngyroscope thresholds sets the minimum change in gyroscope's output values in order to send it to the robot\n smooth sensor output checkbox will stabilize the output of the sensors where it'll divide the average value by threee to five past reads of the sensors  "

        android:textColor="@color/colorPrimaryDark"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />
</android.support.constraint.ConstraintLayout>