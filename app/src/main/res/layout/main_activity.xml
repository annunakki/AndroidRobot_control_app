<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/doid_background_small"
    tools:ignore="MissingDefaultResource">

    <Button
        android:id="@+id/btnForward"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/round_button"
        android:visibility="visible"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/btnReverse"
        app:layout_constraintEnd_toEndOf="parent"
        android:focusable="true" />

    <Button
        android:id="@+id/btnReverse"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_button"
        android:visibility="visible"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnTurnLeft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="66dp"
        android:background="@drawable/round_button"
        android:visibility="visible"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnTurnRight" />

    <Button
        android:id="@+id/btnTurnRight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/round_button"
        android:visibility="visible"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnBluetooth"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/ic_launcher_background"
        android:clickable="true"
        android:onClick="btMenu"
        android:text="@string/bluetooth"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btnImage"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnImage"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="31dp"
        android:layout_height="53dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/bluetooth_icon"
        android:clickable="false"
        android:contentDescription="@android:string/ok"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="160dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="234dp"
        android:layout_height="47dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="82dp"
        android:text="Rotate the phone to use all avaialble aoptions"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>